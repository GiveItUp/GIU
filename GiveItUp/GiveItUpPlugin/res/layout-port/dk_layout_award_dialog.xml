<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/dk_parent_panel" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:background="@drawable/new_bg_dialog"
    android:orientation="vertical" >
    <!-- title -->
	<TextView 
		android:id="@+id/dk_dialog_title"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:singleLine="true" 
	    android:text="@string/dk_text_quit_game_confirm_txt"
	    android:textSize="16sp"
	    android:textColor="@android:color/black"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="12dp"
	    android:layout_marginRight="12dp"
	    android:visibility="gone"
	    /> 
	<include layout="@layout/dk_dialog_header"/>

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	        <LinearLayout
	            android:id="@+id/dk_dialog_linear_content"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:orientation="vertical"
	            android:padding="5dp"
	            android:visibility="gone" >

	            <TextView
	                android:id="@+id/dk_dialog_tv_userinfo_tip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dp"
	                android:text="您的账号绑定信息"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/dk_color_666666"
	                android:textSize="12sp" />

	            <LinearLayout
	                android:id="@+id/dk_dialog_baiduid_linear"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:visibility="visible" >

	                <TextView
	                    android:id="@+id/dk_dialog_tv_key"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="百度账号："
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:textColor="@color/dk_color_333333"
	                    android:textSize="14sp" />

	                <TextView
	                    android:id="@+id/dk_dialog_tv_value"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="value"
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:textColor="@color/dk_color_333333"
	                    android:textSize="14sp" />
	            </LinearLayout>

	            <LinearLayout
	                android:id="@+id/dk_dialog_phone_linear"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:visibility="visible" >

	                <TextView
	                    android:id="@+id/dk_dialog_tv_key"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="手机号码："
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:textColor="@color/dk_color_333333"
	                    android:textSize="14sp" />

	                <TextView
	                    android:id="@+id/dk_dialog_tv_value"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="value"
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:textColor="@color/dk_color_333333"
	                    android:textSize="14sp" />
	            </LinearLayout>

	            <TextView
	                android:id="@+id/dk_dialog_tv_drawsuccess_tip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dp"
	                android:text="您的获奖信息"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/dk_color_666666"
	                android:textSize="12sp" />

	            <TextView
	                android:id="@+id/dk_dialog_tv_value1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:text="value"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/dk_color_333333"
	                android:textSize="14sp"
	                android:visibility="gone" />

	            <TextView
	                android:id="@+id/dk_dialog_tv_value2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:text="value"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/dk_color_333333"
	                android:textSize="14sp"
	                android:visibility="gone" />

	            <TextView
	                android:id="@+id/dk_dialog_tv_value3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:text="value"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/dk_color_333333"
	                android:textSize="14sp"
	                android:visibility="gone" />

	            <TextView
	                android:id="@+id/dk_dialog_tv_value4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:text="value"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/dk_color_333333"
	                android:textSize="14sp"
	                android:visibility="gone" />

	            <TextView
	                android:id="@+id/dk_dialog_tv_value5"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:text="value"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/dk_color_333333"
	                android:textSize="14sp"
	                android:visibility="gone" />

	            <TextView
	                android:id="@+id/dk_dialog_tv_sendphone_tip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dp"
	                android:text="已发送到手机%s,请尽快使用"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="#f08f1e"
	                android:textSize="12sp" />

	            <View
	                android:id="@+id/view1"
	                android:layout_width="wrap_content"
	                android:layout_height="1dp"
	                android:layout_marginTop="6dp"
	                android:background="#cccccc" />
	        </LinearLayout>
	        
	        <TextView
	            android:id="@+id/tv_other_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="13dp"
	            android:layout_marginRight="13dp"
	            android:layout_marginTop="2dp"
	            android:text="下列游戏正在进行抽奖活动,下载游戏继续抽奖哦。"
	            android:textColor="@color/dk_color_666666"
	            android:textSize="16sp"
	            android:visibility="gone" />

	        <TextView
	            android:id="@+id/tv_noaward_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="13dp"
	            android:layout_marginLeft="13dp"
	            android:layout_marginRight="13dp"
	            android:layout_marginTop="5dp"
	            android:textColor="@color/dk_color_666666"
	            android:textSize="16sp" />

	        <HorizontalScrollView
	            android:id="@+id/dk_games_scrollview"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginRight="12dp"
	            android:scrollbars="none" >

	            <LinearLayout
	                android:id="@+id/category_layout"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:gravity="center"
	                android:orientation="horizontal" >

	                <GridView
	                    android:id="@+id/dk_game_recomend_arrays"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:cacheColorHint="#00000000"
	                    android:drawSelectorOnTop="false"
	                    android:horizontalSpacing="15dp"
	                    android:listSelector="@null"
	                    android:numColumns="auto_fit"
	                    android:stretchMode="columnWidth" >
	                </GridView>
	            </LinearLayout>
	        </HorizontalScrollView>

	        <LinearLayout
	            android:id="@+id/dk_game_pointer_area_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginRight="12dp"
	            android:layout_marginTop="10dp"
	            android:orientation="vertical"
	            android:visibility="gone" >
	        </LinearLayout>

	        <View
	            android:id="@+id/dk_dialog_stub_view"
	            android:layout_width="match_parent"
	            android:layout_height="10dp"
	            android:visibility="gone" />

	        <LinearLayout
	            android:id="@+id/dk_dialog_btn_area"
	            android:layout_width="280dp"
	            android:layout_height="50dp"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="12dp"
	            android:layout_marginRight="12dp"
	            android:orientation="horizontal" >

	            <Button
	                android:id="@+id/dk_btn_pointer_game_recommend"
	                android:layout_width="0px"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:background="@drawable/dk_btn_pointer_game_selector"
	                android:gravity="center"
	                android:text="@string/dk_btn_pointer_game_recommend_txt"
	                android:textColor="@android:color/white"
	                android:textSize="16sp" />

	            <View
	                android:layout_width="14dp"
	                android:layout_height="wrap_content" />

	            <Button
	                android:id="@+id/dk_btn_return_game"
	                android:layout_width="0px"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:background="@drawable/dk_btn_confirm_quit_selector"
	                android:gravity="center"
	                android:textColor="@color/dk_color_333333"
	                android:textSize="16sp" />
	        </LinearLayout>
	    </LinearLayout>

	</ScrollView>
</LinearLayout>
